<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:handroid="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_shadow_end_color"
    tools:context=".AchatDetailActivity"
    android:orientation="vertical">


    <fragment
        android:id="@+id/up_fragment"
        android:name="com.deodexed.brainfuck.ArticleDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"

        tools:layout="@layout/fragment_article_detail" />

    <fragment
        android:id="@+id/down_fragment"
        android:name="com.deodexed.brainfuck.ArticleFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        tools:layout="@layout/fragment_article" />


</LinearLayout>